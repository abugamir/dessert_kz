<!--Content section-->
<section class="main-content">
  <div class="container">
    <h1 class="titleT">Favourite recipes</h1>
       <% dessertInfo.forEach(function(dessert) { %>
      <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-12">
          <div class="food-card food-card--vertical">
              <div class="food-card_img">

                  <img class="cupck" src="img/1628076132_127253.gif" width="300px" alt="rulet" />
        
                    <a href="/deleteDessert/<%=dessert._id %> " method="post"><i class="fa fa-trash"></i></a>
              </div>
              <div class="food-card_content">
                  <div class="food-card_title-section">
                      <p class="food-card_title"><%=dessert.name %> </p>
                      <p class="food-card_author" style="color: black"><%=dessert.author %> </p>
                  </div>
                  <div class="food-card_bottom-section">
                      <div class="space-between">
                          <div>
                              <span class="fa fa-fire"></span><%=dessert.calorie %> 
                              <span class="fa fa-clock"></span><%=dessert.time %> 
                          </div>
                          <div class="pull-right">
                              <span class="badge badge-success"><%=dessert.categories %> </span>
                          </div>
                      </div>
                      <hr>
                      <p class="description">Fdsfdfsd</p>
                      <div class="readMore">
                        <form action="/toRecept/<%=dessert._id %> ">
                        <button class="btn button-outline button-one"> 
                          <span>Read More</span>
                        </button>
                      </form>
                      </div>
                  </div>
              </div>
          </div>
      </div>
    </div>
     <% }) %>
